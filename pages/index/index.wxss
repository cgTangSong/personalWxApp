/* pages/index/index.wxss */
.container {
    width: 100%;
    height: auto;
    overflow-x: hidden;
    font-size: 11pt;
}

.container title {
    display: block;
    width: 92%;
    height: 100rpx;
    line-height: 100rpx;
    padding: 0 4%;
    background-color: white;
    margin-top: 20rpx;
    font-size: 13pt;
    color: royalblue;
}

.personal-info {
    width: 92%;
    height: auto;
    padding: 0 4%;
    background-color: white;
    margin-top: 20rpx;
}

.personal-info dl {
    display: flex;
    width: auto;
    height: 100rpx;
    align-items: center;
    border-bottom: 1rpx solid #e1e1e1;
}

.personal-info>dl:last-child{
    border: none;
}

.personal-info dl text{
    font-size: 11pt;
}

.personal-info view{
    display: flex;
}

.personal-info view dl{
    width: 50%;
}

.personal-info dl dt{
    width: 160rpx;
}

.wx-qr-code{
    width: 100vw;height: 100vh;
    position: fixed;
    top: 0;
    left: 0;
}

.wx-qr-code image{
    display: block;
    width: auto;height: 74%;
    margin: 100rpx auto 0;
    border-radius: 18rpx;
}

.wx-qr-code icon{
    position: absolute;
    top: 138rpx;right: 10%;
}

.wechat image{
    width: 50rpx;height: 50rpx;
    margin-left: 250rpx;
}

.base-line{
    width: 100%;height: 100rpx;
    text-align: center;
    line-height: 100rpx;
    color: #999999;
}

.text-color{
    color: #008aff;
}

.introduce{
    width: 92%;height: auto;
    padding: 0 4% 20rpx; 
    background-color: white;
}

.introduce i{
    display: block;
    line-height: 100rpx;
    color: red;
    border-top: 2px solid #e1e1e1; 
}

.introduce ul{
    display: flex;
    flex-flow: column;
}

.introduce ul li{
    padding: 0 0 20rpx 0;
}